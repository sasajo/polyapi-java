{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "strictNullChecks": true,
    "paths": {
      "*": ["./src/*", "./test/*"],
      "@poly/model": ["./packages/model/src"],
      "@poly/common/*": ["./packages/common/src/*"]
    },
    "baseUrl": "."
  },
  "references": [
    {
      "path": "./packages/model"
    },
    {
      "path": "./packages/common"
    }
  ],
  "include": ["src/**/*", "test/**/*"]
}
